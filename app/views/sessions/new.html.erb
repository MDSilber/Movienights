<h1> Login </h1>

<% if flash[:alert] != nil %>
  <div>
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_tag("/sessions/create") do -%>
<div class="field">
  <%= label :user, :email %><br/>
  <%= text_field :user, :email %>
</div>
<div class="field">
  <%= label :user, :password %><br />
  <%= password_field :user, :password %>
</div>

<div class="actions">
  <%= submit_tag "Log in!" %>
<div>

<br>
Don't have an account? 
<%= link_to "Sign up!", "/users/new" %>

<% end -%>
